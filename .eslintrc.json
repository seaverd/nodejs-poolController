{
    /* See all the pre-defined configs here: https://www.npmjs.com/package/eslint-config-defaults */
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "env": {
        "amd": true,
        "browser": true,
        "jquery": true,
        "node": true,
        "es6": true,
        "worker": true
    },
    "rules": {
        "eqeqeq": 2,
        "comma-dangle": 1,
        "no-console": 0,
        "no-debugger": 1,
        "no-extra-semi": 1,
        "no-extra-parens": 0,
        "no-irregular-whitespace": 0,
        "no-undef": 0,
        "no-unused-vars": 0,
        "no-case-declaration": 0,
        "no-prototype-builtins": 0,
        "semi": 1,
        "semi-spacing": 1,
        "valid-jsdoc": [
            2,
            {
                "requireReturn": false
            }
        ],
        "space-infix-ops": 2,
        "keyword-spacing": ["error",{"before": true, "after": true}]
    }
}